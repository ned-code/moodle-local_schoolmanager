{{!
    @template local_schoolmanager/school_schoolprofile

    school_manager_render layout template.

    Context variables required for this template:
    * name string
    * code string
    * city string
    * country string
    * timezone string
    * localtime string
    * synctimezone bool
    * schoolwebsite string - link href and text
    * schoolyear string
}}
<div class="card mb-3 school-schoolprofile">
    <div class="card-header text-align-center">
        {{#str}}schoolprofile, local_schoolmanager{{/str}}
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">{{#str}}name, local_schoolmanager{{/str}}:</div>
            <div class="col-md-8"><strong>{{name}}</strong></div>
        </div>
        <div class="row">
            <div class="col-md-4">{{#str}}rosedalecode, local_schoolmanager{{/str}}:</div>
            <div class="col-md-8"><strong>{{code}}</strong></div>
        </div>
        <div class="row">
            <div class="col-md-4">{{#str}}location, local_schoolmanager{{/str}}:</div>
            <div class="col-md-8"><strong>{{city}}, {{country}}</strong></div>
        </div>
        <div class="row">
            <div class="col-md-4">{{#str}}timezone, local_schoolmanager{{/str}}:</div>
            <div class="col-md-8"><strong>{{timezone}} ({{localtime}})</strong>{{#synctimezone}} <i class="fa fa-users" aria-hidden="true"></i>{{/synctimezone}}</div>
        </div>
        <div class="row">
            <div class="col-md-4">{{#str}}schoolwebsite, local_schoolmanager{{/str}}:</div>
            <div class="col-md-8"><strong>
                <a href="{{schoolwebsite}}" target="_blank">{{schoolwebsite}}</a>
            </strong></div>
        </div>
        <div class="row">
            <div class="col-md-4">{{#str}}schoolyear, local_schoolmanager{{/str}}:</div>
            <div class="col-md-8"><strong>{{schoolyear}}</strong></div>
        </div>
    </div>
</div>