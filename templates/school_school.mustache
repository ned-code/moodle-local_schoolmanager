            <div class="card-header">
                {{#str}}staffsummary, local_schoolmanager{{/str}}
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-9">{{#str}}classroomteachers, local_schoolmanager{{/str}}</div>
                    <div class="col-md-3">{{classroomteachers}}</div>
