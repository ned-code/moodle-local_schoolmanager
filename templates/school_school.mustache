                    <div class="col-md-9">{{#str}}proctormanager, local_schoolmanager{{/str}}</div>
                    <div class="col-md-3">{{proctormanager}}</div>
                </div>
                <div class="row">
                    <div class="col-md-9">{{#str}}academicintegritymanager, local_schoolmanager{{/str}}</div>
                    <div class="col-md-3">{{academicintegritymanager}}</div>
                </div>
            </div>
        </div>
