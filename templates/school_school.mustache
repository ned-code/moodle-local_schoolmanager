{{!
    @template local_schoolmanager/school_school

    school_manager_render layout template.

    Context variables required for this template:
    * See school_schoolprofile and school_compliance_report templates
    * compliance_report object
    * hasdifferenttimezone bool
    * synctimezone bool
    * isadmin bool
    * edittimezoneurl string - link to edit page
}}
<div class="row">
    <div class="col-xl-9 col-lg-8 col-md-7 col-sm-6 table-wrapper">
        {{#viewschooldescription}}
            {{> local_schoolmanager/school_schoolinfo }}
        {{/viewschooldescription}}
        {{#compliance_report}}
            {{> local_schoolmanager/school_compliance_report }}
        {{/compliance_report}}
    </div>
    {{> local_schoolmanager/school_summary_blocks }}
</div>
{{#hasdifferenttimezone}}
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="alert alert-danger mt-4 text-align-center">
                {{#str}} differenttimezonewarning, block_ned_teacher_tools {{/str}}
                {{#synctimezone}}
                    <div>{{#str}} synctimezonewarning, local_schoolmanager {{/str}}</div>
                {{/synctimezone}}
                {{#isadmin}}
                    <div>
                        <a href="{{edittimezoneurl}}">
                            {{#str}} resettimezoneforall, local_schoolmanager {{/str}}
                        </a>
                    </div>
                {{/isadmin}}
            </div>
        </div>
    </div>
{{/hasdifferenttimezone}}