{{!
    @template local_schoolmanager/school_students

    school_manager_render layout template.

    Context variables required for this template:
    * sitename - The name of the site
    * output - The core renderer for the page
    * bodyattributes - attributes for the body tag as a string of html attributes
}}
<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">{{#str}}name, local_schoolmanager{{/str}}:</div>
                    <div class="col-md-8"><strong>{{name}}</strong></div>
                </div>
                <div class="row">
                    <div class="col-md-4">{{#str}}rosedalecode, local_schoolmanager{{/str}}:</div>
                    <div class="col-md-8"><strong>{{code}}</strong></div>
                </div>
                <div class="row">
                    <div class="col-md-4">{{#str}}location, local_schoolmanager{{/str}}:</div>
                    <div class="col-md-8"><strong>{{city}}, {{timezone}} ({{localtime}})</strong></div>
                </div>
                <div class="row">
                    <div class="col-md-4">{{#str}}timezone, local_schoolmanager{{/str}}:</div>
                    <div class="col-md-8"><strong>{{code}}</strong></div>
                </div>
                <div class="row">
                    <div class="col-md-4">{{#str}}schoolwebsite, local_schoolmanager{{/str}}:</div>
                    <div class="col-md-8"><strong>
                        <a href="{{schoolwebsite}}" target="_blank">{{schoolwebsite}}</a>
                        </strong></div>
                </div>
                <div class="row">
                    <div class="col-md-4">{{#str}}schoolyear, local_schoolmanager{{/str}}:</div>
                    <div class="col-md-8"><strong>{{schoolyear}}</strong></div>
                </div>
            </div>
        </div>
    </div>
</div>
{{#hasdifferenttimezone}}
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="alert alert-danger mt-4 text-align-center">
                {{# str }} differenttimezonewarning, block_ned_teacher_tools {{/ str }}
                <div>
                    <a href="{{edittimezoneurl}}">
                        {{# str }} resettimezoneforall, local_schoolmanager {{/ str }}
                    </a>
                </div>
            </div>

        </div>
    </div>
{{/hasdifferenttimezone}}