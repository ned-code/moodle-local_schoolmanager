                    <div class="col-md-9">{{#str}}guidancecounsellors, local_schoolmanager{{/str}}</div>
                    <div class="col-md-3">{{guidancecounsellors}}</div>
                </div>
                <div class="row">
                    <div class="col-md-12"><hr></div>
                </div>
                <div class="row">
                    <div class="col-md-9">{{#str}}generalcert, local_schoolmanager{{/str}}</div>
                    <div class="col-md-3">{{generalcert}}/{{staffs}}</div>
                </div>
                <div class="row">
                    <div class="col-md-9">{{#str}}advancedcert, local_schoolmanager{{/str}}</div>
