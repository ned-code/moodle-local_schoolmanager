{{!
    @template local_schoolmanager/school_schoolinfo

    school_manager_render layout template.

    Context variables required for this template:
    * name string
    * code string
    * city string
    * country string
    * timezone string
    * localtime string
    * synctimezone bool
    * schoolwebsite string - link href and text
    * schoolyear string
}}
<div class="card mb-3 school-schoolinfo">
    <div class="card-body">
        <div class="row">
            <div class="col-lg-3 p-2">
                {{#logourl}}
                    <img class="img-fluid m-2" src="{{logourl}}">
                {{/logourl}}
                {{^logourl}}
                    <span class="school-shortname">{{shortname}}</span>
                {{/logourl}}
            </div>
            <div class="col-lg-9 py-2 px-4">{{{note}}}</div>
        </div>
    </div>
</div>